    body 
        div.wrapper
            block header 
            
            block main
                
            block footer

            #currentTasks.offcanvas.offcanvas-start.lk-curtask(data-bs-scroll='true' data-bs-backdrop='true' tabindex='-1' aria-labelledby='offcanvasScrollingLabel')
                div.offcanvas-header
                    h5#offcanvasScrollingLabel.offcanvas-title Требует вашего внимания
                    button.btn-close.text-reset(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
                div.offcanvas-body
                    .lk-curtask__item 
                        div.type.mb-2 
                            div.badge.bg-danger -1 жизнь
                        div.student 
                            b.small Antuan Georg Leopold
                        div.content.text-muted Просрочена тема «Подходы к решению уравнений»

                    .lk-curtask__item 
                        div.type.mb-2 
                            div.badge.bg-danger Кончились жизни
                        div.student 
                            b.small Antuan Georg Leopold
                        div.content

                    .lk-curtask__item 
                        div.type.mb-2 
                            div.badge.bg-warning.text-body Запрос на добавение  
                        div.student
                            b.small Antuan Georg Leopold  
                        div.content.text-muted Добавьте меня, хочу уже учиться скорее

                    .lk-curtask__item 
                        div.type.mb-2
                            div.badge.bg-warning.text-body Ожидает проверки 
                        div.student 
                            b.small Antuan Georg Leopold
                        div.content.text-muted Задача по&nbsp;теме «Подходы к решению уравнений» 

                    .lk-curtask__item
                        div.type.mb-2  
                            div.badge.bg-warning.text-body Ожидает проверки 
                        div.student 
                            b.small Antuan Georg Leopold
                        div.content.text-muted Контрольная #56757

                    .lk-curtask__item
                        div.type.mb-2 
                            div.badge.bg-info Новое сообщение
                        div.student 
                            b.small Antuan Georg Leopold
                        div.content.text-muted Я забыл сдать домашку, простите


            #askUs.modal.modal-lg.fade(data-bs-keyboard='false' tabindex='-1' aria-labelledby='confirmaActivation' aria-hidden='true')
                div.modal-dialog
                    div.modal-content
                        div.modal-header
                            h4.modal-title Задать вопрос ClevMate
                            button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                        div.modal-body
                            div.form-group.mb-0 
                                label.label Ваш вопрос или комментарий
                                textarea.form-control(rows="4")
                        div.modal-footer.border-top-0
                            button.btn.btn-primary 
                                span Отправить    

        include scripts.pug