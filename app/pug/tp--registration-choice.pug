    main.tp-main.tp-login 
        div.container.pb-6.pt-3
            div.row 
                div.col-12.col-sm-10.offset-sm-1.col-md-8.offset-md-2.col-lg-6.offset-lg-3   
                    div.p-4.p-lg-6.bg-white.border.border-dashed   
                        h1 Регистарция

                        div#loginForm
                            form.form-horizontal(action='/Account/Register' method='post' role='form')
                                input(name='__RequestVerificationToken' type='hidden' value='tH_d7c1VzcpYXiGSSCeKZiRTdUYigSzXQIiA6zc0RIvHNkVypLfZFkj90Iu0VHTSPxLMhm30t1gR2deVJtZyxHw0_qDTn5IUXfkDeVBwA6s1')
                            
                                div.mb-5.mt-4
                                    div.row
