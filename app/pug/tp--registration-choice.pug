                                    span.field-validation-valid.text-danger(data-valmsg-for='ClassId' data-valmsg-replace='true')      

                                div.form-group
                                    label.label(for='ClassId') 
                                        | ID класса 
                                        img(src="_Common/BaseMvcLogic/Images/icons/tip.svg", alt="" data-toggle="tooltip" title="Если твой учитель или репетитор пригласил тебя на платформу, введи в это поле ID класса").i-tip
                                    input#ClassId.form-control(name='ClassId' type='text' value='')
                                    span.field-validation-valid.text-danger(data-valmsg-for='ClassId' data-valmsg-replace='true')  


